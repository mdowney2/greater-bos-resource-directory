<%- include('../partials/head') -%>
<%- include('../partials/nav') -%>
<div class="container">
    <h2>Update Issue</h2>

    <form class="forms" action="/issues/<%=issue._id%>?_method=PUT" method="POST">
        <div class="input-set">
            <label for="issueName">Issue Name:</label>
        <input type="text" id="issueName" name="issueName" value="<%= issue.issueName%>">
    </div>
    <div class="input-set">
        <label for="issueDescription">Issue Description:</label>
        <textarea id="issueDescription" name="issueDescription" value="<%= issue.issueDescription %>"></textarea>
    </div>
    <input type="submit" class='jiggly-button' value="Submit">
    </form>

</div>
<%- include('../partials/footer') -%>